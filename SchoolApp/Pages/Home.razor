@page "/"

<PageTitle>School Management</PageTitle>

<h1>Welcome to School Management System</h1>

<p class="lead">Manage your school's classes and students efficiently.</p>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">
                <h4><span class="bi bi-grid-3x3-gap-fill"></span> Classes</h4>
            </div>
            <div class="card-body">
                <p class="card-text">View all classes and their enrolled students.</p>
                <a href="/classes" class="btn btn-light">Go to Classes</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">
                <h4><span class="bi bi-people-fill"></span> Students</h4>
            </div>
            <div class="card-body">
                <p class="card-text">View all students in the school system.</p>
                <a href="/students" class="btn btn-light">Go to Students</a>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-info mt-4">
    <h5>Quick Stats</h5>
    <ul>
        <li>Total Classes: 5</li>
        <li>Total Students: 20</li>
        <li>Average Students per Class: 4</li>
    </ul>
</div>
