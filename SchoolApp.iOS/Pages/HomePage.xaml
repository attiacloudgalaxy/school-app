<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolApp.iOS.Pages.HomePage"
             Title="School Management">
    
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">
            
            <!-- Header -->
            <Label 
                Text="Welcome to School Management"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="{StaticResource Primary}" />

            <Label 
                Text="Manage your school's classes and students efficiently"
                FontSize="16"
                HorizontalOptions="Center"
                TextColor="{StaticResource Gray600}"
                Margin="0,0,0,30" />

            <!-- Connection Status -->
            <Frame BackgroundColor="{StaticResource Secondary}"
                   CornerRadius="10"
                   Padding="15">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="&#x2713;" 
                           FontSize="20" 
                           TextColor="White"
                           x:Name="StatusIcon"/>
                    <Label Text="Connected to API" 
                           FontSize="16" 
                           TextColor="White"
                           x:Name="StatusLabel"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Stats Card -->
            <Frame BackgroundColor="{StaticResource Gray100}"
                   CornerRadius="15"
                   Padding="20"
                   Margin="0,10,0,0">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Quick Stats" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="20" RowSpacing="15">
                        <Label Grid.Row="0" Grid.Column="0" Text="Total Classes:" FontSize="14" TextColor="{StaticResource Gray600}"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="5" FontSize="18" FontAttributes="Bold" HorizontalOptions="End"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="Total Students:" FontSize="14" TextColor="{StaticResource Gray600}"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="20" FontSize="18" FontAttributes="Bold" HorizontalOptions="End"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Classes Button -->
            <Button 
                Text="View Classes"
                FontSize="18"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="60"
                Clicked="OnClassesClicked"
                Margin="0,20,0,0">
                <Button.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.3" />
                </Button.Shadow>
            </Button>

            <!-- Students Button -->
            <Button 
                Text="View Students"
                FontSize="18"
                BackgroundColor="{StaticResource Secondary}"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="60"
                Clicked="OnStudentsClicked">
                <Button.Shadow>
                    <Shadow Brush="Black" Offset="0,2" Radius="4" Opacity="0.3" />
                </Button.Shadow>
            </Button>

            <!-- Refresh Button -->
            <Button 
                Text="Test API Connection"
                FontSize="14"
                BackgroundColor="{StaticResource Gray200}"
                TextColor="{StaticResource Gray900}"
                CornerRadius="10"
                HeightRequest="50"
                Clicked="OnTestConnectionClicked"
                Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
